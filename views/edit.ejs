<%- include ("partials/header"); %>
<div class="container">
    <div style="width: 70%; margin: 0 auto;">
        <h1 style="text-align: center;">Edit <%= blog.title %> </h1>
        <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" value="<%= blog.title %>" name="blog[title]" id="" class="form-control">
            </div>
            <div class="form-group">
                <input type="text" value="<%= blog.image %>" name="blog[image]" id="" class="form-control">
            </div>
            <div class="form-group">
                <textarea name="blog[body]" class="form-control"><%= blog.body %></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-outline-primary btn-block">submit</button>
            </div>
        </form>
        <a href="/">Go Back</a>
    </div>
</div>
<%- include ("partials/footer"); %>